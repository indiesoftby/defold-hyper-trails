[bootstrap]
main_collection = /demo/demo_main.collectionc

[script]
shared_state = 1

[display]
width = 960
height = 540
high_dpi = 1
samples = 4
update_frequency = 60

[project]
title = hyper_trails
version = 1.2.0
dependencies#0 = https://github.com/KorolevSoftware/defold-faststream/archive/refs/tags/beta_1.0.zip

[library]
include_dirs = hyper_trails

[input]
game_binding = /demo/input/game.input_bindingc

[physics]
scale = 0.01
gravity_y = -300.0
velocity_threshold = 100.0

[graphics]
texture_profiles = /demo/assets/graphics/demo.texture_profiles

[shader]
output_spirv = 1

[html5]
scale_mode = fit
cssfile = /builtins/manifests/web/dark_theme.css

